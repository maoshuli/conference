<!-- 用户抽奖页面 -->
<view>中奖信息</view>
<view>
  <view wx:for="{{lottery}}" wx:key="{{index}}" data-id="{{item._id}}" data-status="{{item.status}}" >
    <view>
      奖项名称：{{item.name}}
      
      || 人数：{{item.num}}
    </view>
    <!-- 抽奖按钮 -->
    <button data-id="{{item._id}}" bindtap="userLottery">抽奖</button>
  </view>
</view>