  <!-- 我的奖品 -->
  <view class="page_my">
    <view class="page_my-title">
      <text>我的奖品</text>
    </view>

    <!-- 未获奖显示 -->
    <view class="page_my-gift" wx:if="{{!hasGift}}">
      <text>很遗憾</text>
      <text>年会大奖暂未降临</text>
    </view>

    <!-- 获奖显示 -->
    <view class="page_my-gift"> 
      <text>恭喜你获得</text>
      <text>{{hasGift}}</text>
    </view>

  </view>

</view>