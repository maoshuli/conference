/* 存在的节目的列表 */
/* 新增加的节目也放在这里 */
.getProgram {
  display: flex;
  flex-wrap: wrap;
}
.getProgram_item {
  background-color: rgba(255,0,0,.06);
  width: 100%;
  display: flex;
  padding: 20rpx 20rpx;
  justify-content: space-between;
  flex-direction: row;
  align-content: center;
  margin: 10rpx 0;
  box-sizing: border-box;
}
.getProgram_item-text {
}



.program {
  border: 1px solid greenyellow;
  border-radius: 10rpx;
  margin: 10rpx 20rpx;
}

.program-name {
  display: flex;
  padding: 0 10rpx;
  margin-top: 20rpx;
}

.program-name-input {
  background-color: #eee;
  margin-left: 20rpx;
}

.program-name-input input {
  font-size: 32rpx;
  padding-left: 16rpx;
}

.program-btn {
  margin: 20rpx 0;
  display: flex;
}