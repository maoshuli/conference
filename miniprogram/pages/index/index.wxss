page {
  display: flex;
  justify-content: center;
  flex-direction: column;
  min-height: 100%;
  width: 100%;
}

.page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  background-position: top center;
  background-size: 100%;
}

.head {
  margin-bottom: 102rpx;
  text-align: center;
}

.head_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 10px auto 0 auto;
  box-sizing: border-box;
  border: 1px solid rgb(51, 40, 42);
  background-color: rgb(123, 123, 123);
}

.head_img image {
  width: 100%;
  height: 100%;
}

.head_name {
  line-height: 1;
  margin-top: 17rpx;
  font-size: 30rpx;
}

.number {
  margin-bottom: 150rpx;
  width: 580rpx;
  height: 398rpx;
  text-align: center;
  margin: 0 auto;
  box-sizing: border-box;
  border: 2px solid rgba(156, 156, 156, .1);
  background-color: rgba(0, 0, 0, .1);
  border-radius: 10rpx;
  line-height: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.number_title {
  font-size: 42rpx;
  color: #040000;
}

.number_code {
  color: rgb(79, 13, 16);
  font-size: 140rpx;
  font-weight: bold;
  margin-top: 45rpx;
  margin-bottom: 70rpx;
}

.number_link {
  font-size: 24rpx;
  color: #040000;
  border-bottom: 1px solid;
  letter-spacing: 4px;
  display: inline-block;
  margin: 0 auto;
  padding-bottom: 2px;
}

.btn {
  width: 580rpx;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 42rpx;
  border: 2px solid rgba(193, 119, 119, .2);  
  background-color: rgba(159, 11, 11, 0.2);
  color: #4f0d10;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 210rpx;
  text-align: center;
}


/* ================ */

.header {
  text-align: center;
}

.header-img {
  background: #eee;
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  box-shadow: 1px 1px 2px #aaa;
  overflow: hidden;
}

.header-img image {
  max-width: 100%;
  max-height: 100%;
}

.header-name {
  text-align: center;
}

.entry {
  display: flex;
}

/* 中奖信息 */
.lottery {
  display: flex;
  flex-direction: column;
  text-align: center;
  border: 1px solid rgba(255, 0, 0, .8);
  width: 80%;
  padding: 30rpx 0;
  margin: 120rpx auto;
  border-radius: 5rpx;
}

.lottery_code {
  display: flex;
  flex-direction: column;
}

.lottery_code-number {
  font-size: 88rpx;
  font-weight: bold;
}

.lottery_info {
  text-decoration: underline;
}

.vote {
  text-align: center;
  border: 1px solid rgba(255, 0, 0, .8);
  width: 80%;
  padding: 30rpx 0;
  font-size: 44rpx;
  border-radius: 5rpx;
}