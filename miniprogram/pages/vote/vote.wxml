<view class="page">
  <!-- 选择 -->
  <view class="best"  bindtap="changeTab">
    <view class="{{active==1 ?'active':''}}" data-id='1'>最佳节目</view>
    <view class="{{active==2 ?'active':''}}" data-id='2'>最佳男服装</view>
    <view class="{{active==3 ?'active':''}}" data-id='3'>最佳女服装</view>
  </view>


  <!-- 节目投票项目 -->
  <!-- 切换盒子 -->
  <view class="container"> 
    <!-- 投票项目 -->
    <view class="vote" wx:for="{{vote}}" wx:if="{{item.type == 'preform'}}" wx:key="{{index}}">
      <!-- 投票项目标题 -->
      <view clsss="vote_title">最佳节目</view>
      <!-- 投票选项集合 -->
      <view class="vote_group">
        <!-- 单个投票选项 -->
        <view class="vote_list" wx:for="{{item.content}}" wx:key="{{index}}">
          <!-- 节目和表演者 -->
          <view class="vote_list-name">
            <view>节目名称：{{item.name}}</view>
            <view wx:for="{{item.actor}}" wx:key="{{index2}}">表演者：{{item.nickname}}</view>
          </view>
          <button class="vote_list-btn" data-actor="" data-actor="" data-hasVote="item.hasVote" data-index="{{index}}" bindtap="vote">
            投票{{ item.hasVote ? '已投票': ''}}
          </button>
        </view>
      </view>
    </view>
  </view>

</view>