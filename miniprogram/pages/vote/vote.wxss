/* pages/vote/vote.wxss */
page {
  width: 100%;
  min-height: 100%;
}

.page {
  height: 100%;
}


.best {
  display: flex;
  text-align: center;
  justify-content: space-around;
  height: 6%;
  font-size: 38rpx;
  background-color: rgb(86, 116, 252);
  color: rgb(205, 214, 254);
}

.best view {
  width: 33.333%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.best view::after {
  content: '';
  display: none;
  width: 100%;
  height: 2px;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
}

.best view.active {
  color: #fff;
}

.best view.active::after {
  display: block;
}

.title {
  text-align: center;
  font-size: 44rpx;
  margin: 40rpx 0;
}



.container {
  height: 94%;
}