page {
  width: 100%;
  min-height: 100%;
  background-image: url(https://6c2d-l-2c1be8-1258223159.tcb.qcloud.la/info-bg.jpg?sign=f701721edf833ad7bb6ca2564e24d93f&t=1547705206);
  background-position: top center;
  background-repeat: no-repeat;
  background-size: 100%;
  background-color: rgb(183, 183, 183);
}

.page {
  height: 100%;

}

.best {
  display: flex;
  text-align: center;
  justify-content: space-around;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  background-color: rgb(242, 242, 242);
  color: #333;
}

.best view {
  width: 33.333%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}


.best view.active {
  background-color: rgb(214, 214, 214);
}

.vote {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.vote_title {
  width: 682rpx;
  height: 171rpx;
  line-height: 171rpx;
  background-position: top center;
  background-size: 100%;
  font-size: 42rpx;
  color: #040000;
  margin-left: 72rpx;
  position: relative;
}

.vote_title image {
  position: absolute;
  left: 0;
  top: 0;
  width: 682rpx;
  height: 171rpx;
}

.content {
  background-color: rgba(0, 0, 0, .1);
  border: 2px solid rgba(156, 156, 156, .1);
  box-sizing: border-box;
  width: 580rpx;
  border-radius: 10rpx;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 38rpx;
}

/* 节目名字 */
.content_name {
  font-size: 30rpx;
  color: #040000;
  margin-bottom: 33rpx;
  padding-left: 22rpx;
}

/* 参与人员 */
.content_actor {
  margin: 0 20rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.content_actor-user {
  display: flex;
  flex-direction: column;
  width: 130rpx;
  align-items: center;
  margin-bottom: 15rpx;
}

.content_actor-head {
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  border: 1px solid #000;
  border-radius: 50%;
  background-color: #909090;
  overflow: hidden;
}

.content_actor-head image {
  height: 100%;
  width: 100%;
}

.content_actor-name {
  text-align: center;
  font-size: 24rpx;
  height: 48rpx;
  color: #040000;
  line-height: 1;
  margin-top: 16rpx;
  max-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}


/* 按钮 */
.content_btn {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  font-size: 26rpx;
  text-align: center;
  background-color: rgba(168, 48, 49, .2);
  color: #4f0d10;
  font-weight: bold;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.content_btn.active {
  background-color: rgba(168, 48, 49, .4)
}

